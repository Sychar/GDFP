<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".Backend.Test">

    <Button

        android:id="@+id/next"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="720dp"
        android:layout_width="100dp"
        android:onClick="onNext_perVios"
        android:background="@drawable/daten_bank_button"
        android:layout_height="80dp"
        android:text="next">

    </Button>
<FrameLayout
     android:layout_marginLeft="180dp"
    android:id="@+id/fram1"
    android:layout_width="500dp"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:orientation="vertical"
        tools:context=".Backend.Test">

        <TextView
            android:layout_width="485dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:paddingRight="12dp"
            android:text="durchmesser"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="40sp"></TextView>

        <ListView

            android:id="@+id/list_for_kennline_durchmeeser"
            android:layout_width="490dp"
            android:layout_height="372dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="45dp"
          >


        </ListView>





    </LinearLayout>
</FrameLayout>

    <FrameLayout
        android:layout_marginLeft="180dp"
        android:id="@+id/fram2"
        android:layout_width="500dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:orientation="vertical"
            tools:context=".Backend.Test">

            <TextView
                android:layout_width="485dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:paddingRight="12dp"
                android:text="Matrial"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="40sp"></TextView>

            <ListView

                android:id="@+id/list_for_matrial"
                android:layout_width="490dp"
                android:layout_height="372dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="45dp"
              >


            </ListView>





        </LinearLayout>

    </FrameLayout>
    <FrameLayout
        android:layout_marginLeft="180dp"
        android:id="@+id/fram3"
        android:layout_width="500dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:orientation="vertical"
            tools:context=".Backend.Test">

            <TextView
                android:layout_width="485dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:paddingRight="12dp"
                android:text="Gas"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="40sp"></TextView>

            <ListView
                android:id="@+id/list_for_Gas"
                android:layout_width="490dp"
                android:layout_height="372dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="45dp"
                >


            </ListView>





        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_marginLeft="180dp"
        android:id="@+id/fram4"
        android:layout_width="500dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:orientation="vertical"
            tools:context=".Backend.Test">

            <TextView
                android:layout_width="485dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:paddingRight="12dp"
                android:text="Verfahren"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="40sp"></TextView>

            <ListView
                android:id="@+id/list_for_verfahren"
                android:layout_width="490dp"
                android:layout_height="372dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="45dp"
                >


            </ListView>





        </LinearLayout>
    </FrameLayout>


    <Button
        android:background="@drawable/daten_bank_button"
        android:onClick="onNext_perVios"
        android:id="@+id/previos"
        android:layout_marginLeft="40dp"
        android:layout_gravity="center_vertical"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="previos">

    </Button>
</FrameLayout>






