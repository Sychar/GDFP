<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".Backend.Test">
    <Button
        android:text="Next"
        android:layout_marginLeft="9dp"
        android:id="@+id/button_link"
        android:layout_marginTop="220dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content">

    </Button>
<FrameLayout
    android:layout_marginLeft="200dp"
    android:id="@+id/fram1"
    android:layout_width="500dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginLeft="17dp"
        android:background="@drawable/border2"
        android:layout_marginTop="246dp"
        android:layout_width="170dp"
        android:layout_height="50dp" >

    </TextView>
    <LinearLayout
        android:layout_width="500dp"
        android:layout_marginLeft="10dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/verfahren_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="18dp"
            android:gravity="center"
            android:text="Verfahren"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold"></TextView>



               <android.support.v7.widget.RecyclerView
                   android:background="@drawable/border2"
                   android:layout_height="330dp"
                   android:layout_width="500dp"
                   android:layout_marginLeft="7dp"
                 style="@style/scroll"
                   android:id="@+id/listone"
                   ></android.support.v7.widget.RecyclerView>



    </LinearLayout>
</FrameLayout>

    <FrameLayout
        android:layout_marginLeft="200dp"
        android:id="@+id/fram2"
        android:layout_width="500dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginLeft="17dp"
            android:background="@drawable/border2"
            android:layout_marginTop="246dp"
            android:layout_width="170dp"
            android:layout_height="50dp" >
        </TextView>
    <LinearLayout
        android:layout_width="500dp"
        android:layout_marginLeft="10dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textColor="#fff"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Matrial"
            android:gravity="center"
            ></TextView>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/listzwei"
            style="@style/scroll"
            android:layout_width="500dp"
            android:layout_height="330dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/border2"
            android:scrollbars="vertical"></android.support.v7.widget.RecyclerView>

    </LinearLayout>

    </FrameLayout>
    <FrameLayout
        android:layout_marginLeft="200dp"
        android:id="@+id/fram3"
        android:layout_width="500dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginLeft="17dp"
            android:background="@drawable/border2"
            android:layout_marginTop="246dp"
            android:layout_width="170dp"
            android:layout_height="50dp" >
        </TextView>
    <LinearLayout
        android:layout_width="500dp"
        android:layout_marginLeft="10dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginLeft="20dp"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="GAS"
            android:gravity="center"
            ></TextView>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/listdrei"
            style="@style/scroll"
            android:layout_width="500dp"
            android:layout_height="332dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/border2"></android.support.v7.widget.RecyclerView>

    </LinearLayout>
    </FrameLayout>
    <FrameLayout
android:layout_marginLeft="170dp"
        android:id="@+id/fram4"
        android:layout_width="500dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginLeft="17dp"
            android:background="@drawable/border2"
            android:layout_marginTop="226dp"
            android:layout_width="match_parent"
            android:layout_height="60dp" >
        </TextView>
    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginLeft="24dp"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:text="Durchmesser"
            android:gravity="center"
            ></TextView>
        <android.support.v7.widget.RecyclerView
       android:paddingLeft="170dp"
            android:id="@+id/listvier"
            style="@style/scroll"
            android:layout_width="match_parent"
            android:layout_height="320dp"

            android:background="@drawable/border2"></android.support.v7.widget.RecyclerView>

    </LinearLayout>
    </FrameLayout>
    <Button
        android:text="Previus"
        android:id="@+id/button_recht"
        android:layout_marginLeft="720dp"
        android:layout_marginTop="220dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content">

    </Button>
</FrameLayout>






