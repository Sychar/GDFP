<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F2000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- hier wurde eine vertikal layout geschrieben ,
     die in der linke Seite vom dem bildschirm liegz -->
    <LinearLayout
        style="@style/general_style"
        android:id="@+id/linke_layout"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--datum zeigen-->
        <!-- verfaheren Button -->
        <TextView
            android:id="@+id/date2"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/border2"
            android:padding="20dp"
            android:text="Datum"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            style="@style/general_style"
            android:textSize="24sp"></TextView>

        <Button

            android:id="@+id/methode_button"
            style="@style/general_style"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:background="@drawable/border2"
            android:drawableTop="@drawable/verharen1"
            android:paddingTop="12dp"
            android:text="METHODE"
            android:textSize="23sp"
            android:textColor="@android:color/white">
        </Button>

        <Button
            android:id="@+id/geberge"
            android:textStyle="normal"
            android:layout_width="120dp"
            android:layout_height="160dp"
            style="@style/general_style"
            android:background="@drawable/border2"
            android:drawableTop="@drawable/kenn"
            android:paddingTop="12dp"
            android:text="GEBERGE"
            android:textSize="23sp"
            android:textColor="@android:color/white">
        </Button>

        <Button
            android:background="@drawable/border2"
            android:paddingTop="12dp"
            android:drawableTop="@drawable/disk"
            style="@style/general_style"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:gravity="center"
            android:textAlignment="center"
            android:text="JOB"
            android:id="@+id/job_btn"
            android:textColor="@android:color/white"
            android:textSize="23sp">
        </Button>

        <Button
            style="@style/general_style"
            android:textSize="17dp"
            android:textColor="@android:color/white"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:background="@drawable/border2">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/obere_layout"
        android:layout_width="865dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_toRightOf="@id/linke_layout">

        <TextView
            style="@style/general_style"
            android:id="@+id/anzeige1"
            android:layout_width="220dp"
            android:layout_height="74dp"
            android:background="@drawable/border2"
            android:gravity="center"
            android:text="Anzeige1"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="25sp">
        </TextView>

        <TextView
            style="@style/general_style"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="25sp"
            android:id="@+id/anzeige2"
            android:text="Anzeige2"
            android:textColor="@android:color/white"
            android:layout_width="110dp"
            android:layout_height="74dp"
            android:background="@drawable/border2">

        </TextView>

        <TextView
            android:id="@+id/anzeige3"
            style="@style/general_style"
            android:layout_width="110dp"
            android:layout_height="74dp"
            android:background="@drawable/border2"
            android:gravity="center"
            android:text="Anzeige3"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="25sp">
        </TextView>

        <TextView
            android:id="@+id/anzeige4"
            style="@style/general_style"
            android:layout_width="110dp"
            android:layout_height="74dp"
            android:background="@drawable/border2"
            android:gravity="center"
            android:text="Anzeige4"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="25sp">
        </TextView>

        <TextView
            android:id="@+id/anzeige5"
            style="@style/general_style"
            android:layout_width="310dp"
            android:layout_height="74dp"
            android:background="@drawable/border2"
            android:gravity="center"
            android:text="Anzeige5"
            android:textColor="@android:color/white"
            android:textSize="24sp">
        </TextView>

    </LinearLayout>

    <fragment
        android:id="@+id/fragment_test"
        android:layout_width="820dp"
        android:layout_height="match_parent"
        android:layout_below="@id/obere_layout"
        tools:layout="@layout/fragment_kennline"
        class="com.jess.gdfp.View.BlankFragment"
        android:layout_toRightOf="@id/linke_layout">
    </fragment>

    <RelativeLayout
        android:textStyle="bold"
        android:id="@+id/circleButton"
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:layout_below="@id/obere_layout"
        android:layout_marginLeft="80dp">
<!--        android:layout_toRightOf="@id/linke_layout"-->

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="500dp"
                android:layout_height="500dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/custom_progressbar_drawable"/>

            <LinearLayout
                android:textStyle="bold"
                android:id="@+id/inside_circlebtn"
                android:layout_width="350dp"
                android:layout_height="250dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="130dp"
                android:orientation="vertical">

                <TextView
                android:textColor="@android:color/white"
                android:text="0"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="70sp"
                android:id="@+id/txtpro"
                android:layout_width="250dp"
                android:layout_height="140dp"
                android:layout_alignBottom="@+id/progressBar"
                android:layout_centerInParent="true"
                android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:textColor="@android:color/white"
                    android:text="A"
                    android:textAlignment="center"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:id="@+id/unit"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="60dp"
                    android:layout_alignBottom="@+id/progressBar"
                    android:layout_centerInParent="true"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

            </LinearLayout>

            <Button
                style="@style/general_style"
                android:id="@+id/button1"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/round_button">
            </Button>

    </RelativeLayout>

    <LinearLayout
        android:textStyle="bold"
        android:id="@+id/untere_layout"
        android:layout_width="840dp"
        android:layout_height="70dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:layout_below="@id/circleButton"
        android:layout_toRightOf="@id/linke_layout">

        <Button
            android:id="@+id/Button_fav1"
            style="@style/general_style"
            android:layout_width="213dp"
            android:layout_height="70dp"
            android:background="@drawable/border2"
            android:drawableEnd="@drawable/fav"
            android:drawableTint="@android:color/white"
            android:text="fav1"
            android:textAlignment="center"
            android:textColor="@android:color/white">
        </Button>

        <Button
            android:id="@+id/Button_fav2"
            style="@style/general_style"
            android:layout_width="213dp"
            android:layout_height="70dp"
            android:background="@drawable/border2"
            android:text="fav2"
            android:textColor="@android:color/white">
        </Button>

        <Button
            android:id="@+id/Button_fav3"
            style="@style/general_style"
            android:layout_width="211dp"
            android:layout_height="70dp"
            android:background="@drawable/border2"
            android:text="Fav3"
            android:textColor="@android:color/white">
        </Button>

        <Button
            android:id="@+id/Button_fav4"
            style="@style/general_style"
            android:layout_width="210dp"
            android:layout_height="70dp"
            android:background="@drawable/border2"
            android:text="Fav4"
            android:textColor="@android:color/white">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rechte_layout"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_toLeftOf="@id/untere_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/date"
            style="@style/general_style"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/border2"
            android:padding="20dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="24sp">
        </TextView>

        <Button
            android:paddingTop="12dp"
            android:drawableTop="@drawable/home2"
            style="@style/general_style"
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:textColor="@android:color/white"
            android:background="@drawable/border2"
            android:text="HOME"
            android:textSize="23sp">
        </Button>

        <Button
            android:drawableTop="@drawable/menuf"
            android:src="@drawable/menuf"
            style="@style/general_style"
            android:id="@+id/menu_btn"
            android:textColor="@android:color/white"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:background="@drawable/border2"
            android:text="MENU"
            android:textSize="23sp">
        </Button>

        <Button
            android:id="@+id/setting_btn"
            android:drawableTop="@drawable/betriebsart"
            style="@style/general_style"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:background="@drawable/border2"
            android:paddingTop="12dp"
            android:text="SETTING"
            android:textSize="23sp"
            android:textColor="@android:color/white">
        </Button>

        <Button
            style="@style/general_style"
            android:textSize="17dp"
            android:textColor="@android:color/white"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:background="@drawable/border2">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/zweitelayout"
        android:orientation="vertical"
        android:layout_width="490dp"
        android:layout_height="150dp"
        android:layout_marginLeft="477dp"
        android:layout_below="@+id/obere_layout">

        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/korrektur"
                style="@style/general_style"
                android:layout_width="155dp"
                android:layout_height="60dp"
                android:background="@drawable/border2"
                android:gravity="center"
                android:text="KorrLB"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="30sp">
            </TextView>

            <TextView
                android:id="@+id/mmin"
                style="@style/general_style"
                android:layout_width="155dp"
                android:layout_height="60dp"
                android:background="@drawable/border2"
                android:gravity="center"
                android:text="m/min"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="30sp">
            </TextView>

            <TextView
                android:id="@+id/strom"
                style="@style/general_style"
                android:layout_width="155dp"
                android:layout_height="60dp"
                android:background="@drawable/border2"
                android:gravity="center"
                android:text="Voltage"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="30sp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="490dp"
            android:layout_height="190dp"
            android:orientation="horizontal">

            <Button
                style="@style/general_style"
                android:id="@+id/btn_korrektur"
                android:layout_width="155dp"
                android:layout_height="90dp"
                android:background="@drawable/border2"
                android:textColor="@android:color/white"
                android:textSize="55sp"></Button>

            <Button
                style="@style/general_style"
                android:id="@+id/btn_mmin"
                android:layout_width="155dp"
                android:layout_height="90dp"
                android:background="@drawable/border2"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="55sp"></Button>

            <Button
                style="@style/general_style"
                android:id="@+id/btn_voltage"
                android:layout_width="155dp"
                android:layout_height="90dp"
                android:textColor="@android:color/white"
                android:textSize="55sp"
                android:background="@drawable/border2"
                ></Button>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/drossel_layout"
        android:layout_width="492dp"
        android:layout_height="300dp"
        android:layout_marginTop="250dp"
        android:orientation="vertical"
        android:layout_marginLeft="475dp">

    <TextView
        android:id="@+id/drossel_value"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="150dp"
        android:gravity="center"
        android:text="DROSSEL [-30]"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        style="@style/general_style">
    </TextView>

    <LinearLayout
        android:id="@+id/progressBar_layout"
        android:layout_width="492dp"
        android:layout_height="100dp"
        android:layout_below="@+id/zweitelayout"
        android:layout_toRightOf="@+id/circleButton"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/Drossel_plus"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="onpressed_Minus_plus"
            android:text="+"
            android:textSize="35sp">
        </Button>

        <ProgressBar
            android:id="@+id/progress"
            style="@style/progress"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="false"
            android:layout_marginTop="30dp"
            android:max="100"
            android:minHeight="30dip"
            android:progress="30"
            android:scaleX="-1" />

        <ProgressBar
            android:id="@+id/progress1"
            style="@style/progress"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="false"
            android:layout_marginTop="30dp"
            android:max="100"
            android:minHeight="30dip"
            android:progress="30" />

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/Drossel_minus"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="onpressed_Minus_plus"
            android:text="-"
            android:textSize="35sp">
            </Button>

        <fragment
            android:id="@+id/frgment_Betriebsart"
            class="com.jess.gdfp.View.BetriebsArt"
            android:layout_width="745dp"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_betriebs_art">
        </fragment>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/hold_layout"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:layout_above="@id/untere_layout"
        android:layout_toLeftOf="@id/rechte_layout"
        android:orientation="vertical">
        <TextView
            android:id="@+id/hold_ist"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Hold"
            android:layout_marginLeft="180dp"
            android:textColor="#FFC200"
            android:textSize="40sp"
            android:textStyle="bold">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:id="@+id/strom_hold"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:text="A"
                    android:textColor=" #FFC200"
                    android:textStyle="bold">
                </TextView>
            </FrameLayout>
            <FrameLayout
                android:layout_width="240dp"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp">
                    <TextView
                      android:id="@+id/spannung_hold"
                      android:layout_width="240dp"
                      android:layout_height="150dp"
                      android:text="V"
                      android:textColor=" #FFC200"
                      android:textStyle="bold">
                    </TextView>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
  </LinearLayout>

</RelativeLayout>